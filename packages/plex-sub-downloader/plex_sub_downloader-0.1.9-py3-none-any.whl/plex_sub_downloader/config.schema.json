{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Plex Sub Downloader config schema",
    "type": "object",
    "required": ["subliminal", "plex_base_url", "plex_auth_token"],

    "properties": {
        "subliminal": {
            "type": "object",
            "required": ["languages"],
            "properties": {
                "languages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "providers": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "provider_configs": {
                    "type": "object"
                }
            }
        },
        "plex_base_url": {
            "type": "string"
        },
        "plex_auth_token": {
            "type": "string"
        },
        "webhook_host": {
            "type": "string"
        },
        "webhook_port": {
            "type": "integer"
        },
        "subtitle_destination": {
            "type": "string",
            "enum": [
                "with_media",
                "metadata"
            ]
        }
    }
}