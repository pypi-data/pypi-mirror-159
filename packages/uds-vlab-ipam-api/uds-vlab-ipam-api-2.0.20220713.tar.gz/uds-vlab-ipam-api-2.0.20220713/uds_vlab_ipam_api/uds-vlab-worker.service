[Unit]
Description=Background worker to validate UDS vlab IPAM records
After=postgresql.service

[Service]
EnvironmentFile=/etc/environment
ExecStart=/usr/bin/python3 worker.py
WorkingDirectory=/usr/local/lib/python3.6/site-packages/uds_vlab_ipam_api
Restart=always

[Install]
WantedBy=multi-user.target
