# Maintainer: Juliette Monsel <j_4321 at protonmail dot com>
pkgname=arxiv-update-cli
_pkgname=arxiv_update_cli
pkgver=1.0.0
pkgrel=1
pkgdesc="Fetch new articles on arXiv by keywords"
url="https://gitlab.com/j_4321/${pkgname}"
arch=('any')
license=('MIT')
depends=('python-feedparser')
makedepends=('python-setuptools')
optdepends=('python-keyring: Store password in system keyring')
source=("${_pkgname}-${pkgver}.tar.gz")
sha512sums=('0eeff4c15d510db8e5ccc0e845a663ab4fb0569d134860b18be6045b559561a45aa1d3762b557f9b6bc7447ae553e878e72220c3472923afa1af33242878eb12')
build() {
    cd "$srcdir/${_pkgname}-${pkgver}"
    python setup.py build
}

package() {
    cd "$srcdir/${_pkgname}-${pkgver}"
    python setup.py install --root="$pkgdir/" --prefix=/usr --optimize=1 --skip-build
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
